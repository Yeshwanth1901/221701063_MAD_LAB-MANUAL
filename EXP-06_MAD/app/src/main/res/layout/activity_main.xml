<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" android:padding="24dp" android:background="#FFF0F5">
    <EditText android:id="@+id/etName" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter Name" android:padding="12dp" android:backgroundTint="@color/black"/>
    <EditText android:id="@+id/etCGPA" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter CGPA" android:inputType="numberDecimal" android:padding="12dp" android:layout_marginTop="16dp" android:backgroundTint="@color/black"/>
    <Button android:id="@+id/btnSave" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save to SD Card" android:layout_marginTop="24dp" android:padding="12dp" android:backgroundTint="@android:color/holo_purple" android:textColor="@android:color/white"/>
</LinearLayout>